{
  "name": "template-api",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "start": "pnpm build && cross-env NODE_ENV=production node dist/server.js",
    "dev": "cross-env NODE_ENV=development tsx watch src/server.ts | pino-pretty --colorize",
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "check": "pnpm biome check --write ./src/**/*.ts",
    "lint": "pnpm biome lint --write ./src/**/*.ts",
    "format": "pnpm biome format --write ./src/**/*.ts",
    "test": "c8 --100 tsx --test test/**/*.test.ts",
    "test:lcov": "c8 --100 --reporter=lcov tsx --test test/**/*.test.ts",
    "prepare": "husky",
    "pm2": "pm2 start process.yml && tail -f /dev/null",
    "release": "standard-version",
    "major": "pnpm run release --release-as major",
    "minor": "pnpm run release --release-as minor",
    "patch": "pnpm run release --release-as patch",
    "push-release": "git push --follow-tags origin master",
    "pull": "git rebase origin master -i",
    "clean": "rimraf node_modules dist pnpm-lock.yaml",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset"
  },
  "dependencies": {
    "@fastify/autoload": "^6.3.0",
    "@fastify/cors": "^11.0.1",
    "@fastify/helmet": "^13.0.1",
    "@fastify/multipart": "^9.0.3",
    "@fastify/rate-limit": "^10.2.2",
    "@fastify/sensible": "^6.0.3",
    "@fastify/swagger": "^9.5.0",
    "@fastify/swagger-ui": "^5.2.2",
    "@fastify/under-pressure": "^9.0.3",
    "@prisma/client": "^6.8.2",
    "@scalar/fastify-api-reference": "^1.28.23",
    "awilix": "^12.0.5",
    "better-auth": "^1.2.7",
    "close-with-grace": "^2.2.0",
    "dotenv": "^16.5.0",
    "env-schema": "^6.0.1",
    "fastify": "^5.3.2",
    "fastify-better-auth": "^1.0.4",
    "fastify-plugin": "^5.0.1",
    "pino": "^9.6.0",
    "pm2": "^6.0.5",
    "zod": "^3.24.4",
    "zod-to-json-schema": "^3.24.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "@types/lint-staged": "~13.3.0",
    "@types/node": "22.15.3",
    "@types/sinon": "^17.0.4",
    "c8": "^10.1.3",
    "cross-env": "^7.0.3",
    "husky": "9.1.7",
    "lint-staged": "16.0.0",
    "pino-pretty": "13.0.0",
    "prisma": "^6.8.2",
    "rimraf": "^6.0.1",
    "sinon": "^20.0.0",
    "standard-version": "^9.5.0",
    "tsx": "^4.19.4",
    "typescript": "5.8.3"
  },
  "engines": {
    "node": ">=22"
  },
  "lint-staged": {
    "{src,test}/**/*.{ts,js,json}": "pnpm run check"
  }
}
